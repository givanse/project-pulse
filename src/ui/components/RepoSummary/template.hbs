<a class="header" target="_blank" title={{@repo.description}}
    href="https://github.com/{{@repo.nameWithOwner}}">
  {{#if @repo.isFork}}
    <i class="share alternate icon counterclockwise rotated"></i>
  {{/if}}
  {{@repo.nameWithOwner}}
</a>

<div class="description">

  <i class="share alternate icon counterclockwise rotated"></i>
  {{ipad @repo.forkCount 5}}

  <i class="history icon"></i>
  {{ipad @repo.master.commits.history.totalCount 4}}

  <br>

  <i class="exclamation circle icon green"></i>
  {{ipad @repo.issuesOpen.totalCount 4}}
  <i class="code icon green"></i>
  {{ipad @repo.prsOpen.totalCount 4}}

  <br>

  <i class="exclamation circle icon red"></i>
  {{ipad @repo.issuesClosed.totalCount 4}}
  <i class="code icon red"></i>
  {{ipad @repo.prsClosed.totalCount 4}}
</div>